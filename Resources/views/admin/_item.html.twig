<div class="panel {% if item.type == 'folder' %}panel-info{% else %}panel-default{% endif %}">
    <div class="panel-heading">
        {% if item.type == 'folder' %}
            {% include "@OperaMedia/admin/_item_folder.html.twig" %}
        {% else %}
            {% include "@OperaMedia/admin/_item_media.html.twig" %}
        {% endif %}
    </div>

    <div class="panel-body">

        <div aria-label="..." class="btn-group" role="group">
            {% if mode != 'ajax' %}
                <a data-ajax-link class="btn btn-default" href="{% if item.type == 'folder' %} {{ path('opera_admin_media_folder_form', { id: item.id.toString, parentFolder: selected_folder ? selected_folder.id.tostring : null, source: selected_source.name }) }} {% else %} {{ path('opera_admin_media_media_form', { id: item.id.toString, parentFolder: selected_folder ? selected_folder.id.tostring : null, source: selected_source.name }) }} {% endif %} ">
                    Edit
                </a>
            {% endif %}

            {% if mode == 'ajax' and item.type == 'media' %}
                <a class="btn btn-success select-media-button" data-select-media="{{ item.id }}" data-select-media-preview="{{ item.path | imagine_filter('opera_thumbnail') }}">
                    Select
                </a>
                {% if with_formats is not defined or with_formats %}

                    {# Note: dropdown button don't work if bootstrap.js is included twice (check easy_admin.yaml added assets js and webpack config) #}
                    <div class="dropdown pull-left select-media-drop-down">
                        <button aria-expanded="false" aria-haspopup="true" class="btn btn-success dropdown-toggle" data-toggle="dropdown" id="dropdownMenuButton{{ item.id }}" type="button">
                            Select
                            <span class="caret"></span>
                        </button>
                        <ul aria-labelledby="dropdownMenuButton{{ item.id }}" class="dropdown-menu">
                            {% if filter_sets is defined %}
                                {% for filter_set in filter_sets|keys %}
                                    <li>
                                        <a class="dropdown-item" data-select-media="{{ item.id }}" data-select-media-preview="{{ path('liip_imagine_filter', { path: item.path, filter: filter_set }) }}">{{ filter_set }}</a>
                                    </li>
                                {% endfor %}
                            {% endif %}
                        </ul>
                    </div>
                {% endif %}
            {% endif %}

            <a data-ajax-link class="btn btn-danger" href="{% if item.type == 'folder' %} {{ path('opera_admin_media_delete_folder', { id: item.id }) }} {% else %} {{ path('opera_admin_media_delete_media', { id: item.id }) }} {% endif %} ">
                Delete
            </a>
        </div>
    </div>
</div>

<style>
    .panel {
        display: inline-block;
        margin: 10px;
    }
    .file-preview img {
        max-height: 80px;
    }

    .file-preview {
        min-height: 100px;
        text-align: center;
    }
    .badge {
        background-color: #337ab7;
        color: white;
    }
</style>
